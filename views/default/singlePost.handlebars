<section class="blog_area single-post-area area-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 posts-list">
                    <div class="single-post">
                        <div class="feature-img">
                            <img class="img-fluid" src="{{post.file}}" alt="">
                        </div>

<div class="blog_details">
    <h2>{{post.title}}</h2>
    <ul class="blog-info-link mt-3 mb-4">
        <li><a href="#"><i class="far fa-user"></i> Posted By Admin</a></li>
        <li><a href="#"><i class="far fa-comments"></i>Posted On {{post.creationDate}}</a></li>
    </ul>
    <p>
    </p>
    <div class="quote-wrapper">
        <div class="quotes">
                <h2 class="text-center">{{post.title}}</h2>

        </div>
    </div>
    <p>
{{post.description}}
    </p>

</div>

</div>

            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form action="/post/{{post._id}}" method="post">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="comment_body"></textarea>
                            <input type="hidden" name="id" value="{{post._id}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            

            <!-- Single Comment -->

            {{#each post.comments}}
                {{#if commentIsApproved}}
                    <div class="media mb-4">
                        <img class="d-flex mr-3 rounded-circle" src="/public/uploads/avataaars (1).png" alt="">
                        <div class="media-body">
                            <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
                           {{body}}
                        </div>
                    </div>
                </div>
                </div>
                {{/if}}

            {{/each}}

        </div>


