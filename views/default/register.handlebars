<div class="row">
    <div class="col-md-8 mx-auto">
        {{#if errors}}
        {{#each errors}}
        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
            <strong>{{message}}</strong>
        </div>
        {{/each}}
        {{/if}}


        <style>
            body {
                background-color: #E5E5E5;

            }
        </style>
        <div class="page-wrapper animstion mt-3">
            <div style="height: 900px;" class="page-content--bge5">
                <div class="container">
                    <div class="login-wrap">
                        <div class="login-content">
                            <div class="login-logo">
                                <a style="text-decoration-line: none;" href="/">
                                    <h2 style="font-size: 40px; text-transform:uppercase; " class="text-muted">
                                        MeddyBlogPress</h2>
                                </a>
                            </div>
                            <div class="login-form">
                                <form action="/register" method="post">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input name="firstName" class="au-input au-input--full" placeholder="First Name"
                                            id="exampleInputName" type="text" aria-describedby="nameHelp"
                                            placeholder="Enter first name" value="{{firstName}}">
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name </label>
                                        <input name="lastName" class="au-input au-input--full" id="exampleInputLastName"
                                            type="text" aria-describedby="emailHelp" placeholder="Last Name"
                                            value="{{lastName}}" placeholder="Last Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="file">File Upload</label>
                                        <input type="file" class="form-control" id="file" name="uploadedFile"
                                            accept="image/jpeg, image/jpg, image/png, image/bmp">
                                    </div>
                                    <div class="form-group">
                                        <label>Bio </label>
                                        <input name="bio" class="au-input au-input--full" id="exampleInputbio"
                                            type="text" aria-describedby="emailHelp" placeholder="Last Name"
                                            value="{{lastName}}" placeholder="Last Name">
                                    </div>
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        <input name="email" class="au-input au-input--full" id="exampleInputEmail1"
                                            type="email" aria-describedby="emailHelp" placeholder="Enter email"
                                            value="{{email}}" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input name="password" class="au-input au-input--full"
                                            id="exampleInputPassword1" type="password" placeholder="Password"
                                            placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <input name="passwordConfirm" class="au-input au-input--full"
                                            id="exampleConfirmPassword" type="password" placeholder="Confirm Password">
                                    </div>
                                    <div class="login-checkbox">
                                        <label>
                                            <input type="checkbox" name="remember">Remember Me
                                        </label>
                                        <label>
                                            <a href="#">Forgotten Password?</a>
                                        </label>
                                    </div>
                                    <button class="au-btn au-btn--block au-btn--green m-b-20"
                                        type="submit">Register</button>
                                    <div class="social-login-content">
                                        <div class="social-button">
                                            <button class="au-btn au-btn--block au-btn--blue m-b-20">Register with
                                                facebook</button>
                                        </div>

                                    </div>
                                    <div class="register-link">
                                        <p>
                                            Already have an account?
                                            <a href="/login">Login Here</a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>